---
import Layout from "../layouts/Layout.astro";

const TURNSTILE_SITE_KEY = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY;
const sent = Astro.url.searchParams.get("sent") === "1";
const error = Astro.url.searchParams.get("error");
---

<Layout>
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit" async defer is:inline></script>
  <script is:inline data-astro-rerun>
    function renderTurnstile() {
      var el = document.getElementById('turnstile-container');
      if (!el || !window.turnstile) return;
      var sitekey = el.getAttribute('data-sitekey');
      if (!sitekey) return;
      el.innerHTML = '';
      window.turnstile.render(el, { sitekey: sitekey });
    }
    // Re-render after View Transitions soft navigation
    document.addEventListener('astro:page-load', function() {
      if (window.turnstile) { renderTurnstile(); return; }
      // If turnstile API hasn't loaded yet, wait for it
      var iv = setInterval(function() {
        if (window.turnstile) { clearInterval(iv); renderTurnstile(); }
      }, 100);
      setTimeout(function() { clearInterval(iv); }, 8000);
    });
  </script>

  <div class="py-8">
    <div class="container mx-auto w-[80%]">
      <div class="grid grid-cols-1 gap-10 lg:grid-cols-2 lg:items-start lg:pl-[8%]">
        <div class="space-y-6">
          <div class="flex items-center justify-center">
              <img
                  src={"./more.webp"}
                  alt="Contact"
                  loading="lazy"
                  height="500"
                  class="max-w-full max-h-[700px] object-contain shadow"
              />
          </div>
        </div>

        <div class="space-y-6 lg:border-l lg:pl-10">
          <div>
            <h1 class="mt-2 text-4xl font-semibold">Contact</h1>
          </div>

          {sent ? (
            <div class="rounded-lg border border-green-200 bg-green-50 px-4 py-3 text-green-900">
              Message sent.
            </div>
          ) : null}

          {error ? (
            <div class="rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-red-900">
              Failed to send. Please try again.
              <span class="ml-2 text-sm opacity-70">(code: {error})</span>
            </div>
          ) : null}

          <form action="/api/contact" method="POST" class="space-y-4">
            <div class="hidden">
              <label>
                Website
                <input name="website" type="text" tabindex="-1" autocomplete="off" />
              </label>
            </div>

            <div>
              <label class="block text-sm font-medium text-neutral-800" for="name">Name</label>
              <input
                id="name"
                name="name"
                required
                minlength="2"
                maxlength="100"
                class="mt-1 block w-full rounded-md border border-neutral-300 px-3 py-2"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-neutral-800" for="email">Email</label>
              <input
                id="email"
                name="email"
                type="email"
                required
                maxlength="200"
                class="mt-1 block w-full rounded-md border border-neutral-300 px-3 py-2"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-neutral-800" for="message">Message</label>
              <textarea
                id="message"
                name="message"
                required
                minlength="10"
                maxlength="4000"
                rows="6"
                class="mt-1 block w-full rounded-md border border-neutral-300 px-3 py-2"
              ></textarea>
            </div>

            {TURNSTILE_SITE_KEY ? (
              <div id="turnstile-container" data-sitekey={TURNSTILE_SITE_KEY}></div>
            ) : (
              <p class="text-sm text-neutral-600">
                Turnstile is not configured. Set <code class="font-mono">PUBLIC_TURNSTILE_SITE_KEY</code>.
              </p>
            )}

            <button
              type="submit"
              class="inline-flex items-center justify-center rounded-md bg-neutral-900 px-4 py-2 text-white hover:bg-neutral-800"
            >
              Send
            </button>
          </form>

          <p class="text-xs text-neutral-500">
            This form is protected against spam. Your email is used only to reply.
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>