---
interface WorkItem {
  alias: string;
  img?: { src: string; srcset: string; alt: string };
}

interface Props {
  items: WorkItem[];
}

const { items } = Astro.props;
---

<h2 class="text-2xl font-bold mb-4">Featured Artwork</h2>
<ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {
        items.map((item) => (
            <li class="overflow-hidden">
                <a class="block h-full" href={item.alias}>
                    <div class="bg-[#928e7f26] flex items-center justify-center p-6 border-2 rounded-sm shadow aspect-[4/3]">
                        {item.img && (
                            <img
                                src={item.img.src}
                                srcset={item.img.srcset}
                                sizes="(max-width: 800px) 100vw, 800px"
                                loading="lazy"
                                decoding="async"
                                alt={item.img.alt}
                                class="max-w-full max-h-full object-contain"
                            />
                        )}
                    </div>
                </a>
            </li>
        ))
    }
</ul>
